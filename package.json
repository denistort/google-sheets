{
	"name": "pure-js",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"lint:eslint": "eslint src/**/*.js --config .eslintrc.cjs",
		"lint:prettier": "prettier --check src/**/*.js",
		"lint:prettier-fix": "yarn lint:prettier --write .",
		"lint:eslint-fix": "eslint --fix src/**/*.js --config .eslintrc.cjs",
		"test:editorconfig": "editorconfig-checker --exclude '.git|.husky|node_modules'",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"applypatch-msg": "echo \"[Husky] applypatch-msg\"",
			"pre-applypatch": "echo \"[Husky] pre-applypatch\"",
			"post-applypatch": "echo \"[Husky] post-applypatch\"",
			"pre-commit": "npx lint-staged && git add -A ."
		}
	},
	"devDependencies": {
		"editorconfig-checker": "^5.0.1",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-recommended": "^4.1.0",
		"eslint-config-semistandard": "^17.0.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.2.1",
		"prettier": "^2.8.7",
		"sass": "^1.62.0",
		"vite": "^4.2.0",
		"vite-aliases": "^0.11.0"
	},
	"dependencies": {},
	"lint-staged": {
		"*.{js, jsx, ts, tsx, md, html}": [
			"yarn lint:prettier-fix",
			"yarn lint:eslint-fix",
			"git add"
		]
	}
}
